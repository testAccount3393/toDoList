<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/1de09cd372.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/styles/layout.css">
        <title>To Do List</title>
    </head>
    <body>
        <header>
            <nav class="nav">
                <a class="nav-link active" aria-current="page" href="/"><i class="fa fa-home" aria-hidden="true"></i>Home</a>
                <a class="nav-link" href="/work"><i class="fa fa-wifi" aria-hidden="true"></i>Work</a>
            </nav>
        </header>

        <main class="container">
            <div class="title">
                <% if(locals.listTitle) { %>
                    <h1><%= listTitle %></h1>
                <% } else { %>
                    <h1><%= new Date().toDateString() %></h1>
                <% } %>
                
            </div>
            <div class="box">
                <% if (locals.toDoList) { %>
                    <% toDoList.forEach(item => { %>
                        <form action="/delete" method="post">
                            <div class="item">
                                <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                                <p><%= item.name %></p>
                            </div>
                            <input type="hidden" name="listName" value="<%= listTitle  %>" />
                        </form>
                    <% }) %>
                <% } else { %>

                <% } %>
                <form action="/" method="post" class="item">
                    <input type="text" name="item" placeholder="New Item">
                    <button type="submit" name="list" value="<%= listTitle %>" class="btn btn-danger"><i class="fa-solid fa-plus"></i></button>
                </form>
            </div>
        </main>
        <footer>
            &copy;2023
        </footer>
        
    </body>
</html>